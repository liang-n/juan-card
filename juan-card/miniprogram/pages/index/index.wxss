.card {
  padding: 40rpx;
  margin: 48rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 80rpx 0 rgba(0, 0, 0, 0.1);
}

.comment-card {
  margin-bottom: 0 !important;
}

.avatar {
  height: 70rpx;
  width: 70rpx;
}

.banner-v {
  height: 155px;
  margin: 0 0 40rpx;
}

.banner {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.nickname {
  font-size: 24rpx;
}

.like-text {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  margin-right: 16rpx;
}

.date {
  color: rgba(153, 153, 153, 1);
  font-size: 20rpx;
}

.comment {
  line-height: 40rpx;
  color: rgba(55, 65, 81, 1);
}

.c-rgb-153 {
  color: rgba(153, 153, 153, 1);
}

