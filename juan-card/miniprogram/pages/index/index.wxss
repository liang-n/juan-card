  margin: 20rpx 0 0 86rpx;
}

.f-s-12 {
  font-size: 24rpx;
}

.f-s-10 {
  font-size: 20rpx;
}

.p-title {
  font-size: 40rpx;
  line-height: 60rpx;
}

.t-title {
  font-style: 36rpx;
  line-height: 48rpx;
}

.tag-v {
  background-color: rgba(240, 240, 255, 1);
  border-radius: 16rpx;
}

.tag-text {
  margin: 4rpx 20rpx;
  color: rgba(108, 105, 253, 1);
  font-size: 24rpx;
  line-height: 40rpx;
}

.content {
  color: #666;
  font-size: 24rpx;
  line-height: 52rpx;
  margin: 20rpx 0 0 0;
  /* padding-bottom: 30rpx; */
  border-bottom: 1px solid rgba(240, 240, 255, 1);
}

.info {
  margin: 16rpx 40rpx 16rpx 0;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.check {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  color: #fff;
  background: linear-gradient(
    180deg,
    rgba(80, 152, 250, 1) 0%,
    rgba(106, 164, 245, 1) 100%
  );
  box-shadow: 0px 20px 50px -15px rgba(80, 152, 250, 1);
}

