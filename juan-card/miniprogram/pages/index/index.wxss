.clock {
  height: 240rpx;
  width: 240rpx;
  border-radius: 200rpx;
  color: white;
  background-image: linear-gradient(#5098fa, #6aa4f5);
  box-shadow: 0 40rpx 100rpx -50rpx #5098fa;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.clock-hover {
  opacity: 0.9;
}

.tips {
  margin: 40rpx;
  font-size: 32rpx;
  color: #666;
}

.btn {
  width: 240rpx;
  margin: 0 16rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #f6f6f6;
}

.btn-hover {
  background-color: #e3e3e3;
}

.row {
  flex-direction: row;
  justify-items: center;
}
