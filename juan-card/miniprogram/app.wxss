page {
  background: #363636;
  font-size: 32rpx;
  height: 100%;
}

view {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  justify-content: stretch;
}

.background {
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 50rpx 50rpx 0 50rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.flex {
  display: flex;
}

.w-100 {
  width: 100%;
}

.row {
  flex-direction: row;
}

.pd-0-50 {
  padding: 0 50rpx;
}

.column {
  flex-direction: column;
}

.jc-center {
  justify-content: center;
}

.jc-between {
  justify-content: space-between;
}

.ai-center {
  align-items: center;
}

.nowrap {
  flex-wrap: nowrap;
}

.bgc-eee {
  background-color: #eee;
}

.fs-24 {
  font-size: 24rpx;
}

.fs-32 {
  font-size: 34rpx;
}

.b {
  font-weight: bold;
}

